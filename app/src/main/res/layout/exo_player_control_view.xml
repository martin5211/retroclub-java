<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr"
    android:background="@color/exo_black_opacity_60"
    android:orientation="vertical">

    <!-- Top row with time and settings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">

        <TextView android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:textColor="#FFBEBEBE"/>

        <androidx.media3.ui.DefaultTimeBar android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="26dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:played_color="#FF0000FF"
            app:scrubber_color="#FF0000FF"
            app:buffered_color="#CCFFFFFF"
            app:unplayed_color="#33FFFFFF"/>

        <TextView android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:textColor="#FFBEBEBE"/>

    </LinearLayout>

    <!-- Bottom row with controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <!-- Previous button -->
        <ImageButton android:id="@id/exo_prev"
            style="@style/ExoStyledControls.Button.Center.Previous"/>

        <!-- Rewind button -->
        <ImageButton android:id="@id/exo_rew"
            style="@style/ExoMediaButton.Rewind"/>

        <!-- Play/pause button -->
        <ImageButton android:id="@id/exo_play_pause"
            style="@style/ExoStyledControls.Button.Center.PlayPause"/>

        <!-- Fast forward button -->
        <ImageButton android:id="@id/exo_ffwd"
            style="@style/ExoMediaButton.FastForward"/>

        <!-- Next button -->
        <ImageButton android:id="@id/exo_next"
            style="@style/ExoStyledControls.Button.Center.Next"/>

        <!-- Spacer -->


        <!-- Settings button -->
        <!--<ImageButton android:id="@id/exo_settings"
            style="@style/ExoStyledControls.Button.Bottom.Settings"/>-->

        <!-- Custom fullscreen button -->
        <ImageButton
            android:id="@+id/custom_fullscreen"
            android:src="@android:drawable/ic_menu_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FullScreenButtonStyle"
            android:visibility="visible"
            android:contentDescription="@string/fullscreen"/>

        <ImageButton
            android:id="@+id/custom_chromecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chromecast_expand"
            android:layout_marginTop="6dp"
            style="@style/ChromecastButtonStyle"
            android:contentDescription="@string/chromecast"/>

    </LinearLayout>

</LinearLayout>